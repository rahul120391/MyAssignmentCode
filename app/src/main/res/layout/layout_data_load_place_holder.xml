<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_74dp"
    android:paddingTop="@dimen/dimen_21dp"
  >

    <View
        android:id="@+id/viewProfileDummyPic"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_21dp"
        android:background="@drawable/dummy_profile_pic_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
     <LinearLayout
         android:layout_width="@dimen/dimen_0dp"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:paddingEnd="@dimen/dimen_36dp"
         android:paddingBottom="@dimen/dimen_21dp"
         app:layout_constraintStart_toEndOf="@+id/viewProfileDummyPic"
         app:layout_constraintEnd_toEndOf="parent"
         android:paddingStart="@dimen/dimen_16dp"
         >
         <View
             android:layout_width="@dimen/dimen_100dp"
             android:layout_height="@dimen/dimen_8dp"
             android:background="@drawable/dummy_text_bg"
             />
         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/dimen_8dp"
             android:layout_marginTop="@dimen/dimen_16dp"
             android:background="@drawable/dummy_text_bg"
             />
     </LinearLayout>

    <View
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/mercury"
        />
</androidx.constraintlayout.widget.ConstraintLayout>